<%- include('../partials/header') %>
<h2 class="form-title">Criar Curso</h2>
<form method="POST" action="/courses/create" class="register-form">
  <input name="title" placeholder="Título" required />
  <textarea name="description" placeholder="Descrição"></textarea>
  <input name="max_capacity" type="number" placeholder="Capacidade Máxima" required />
  <input name="start_date" type="date" required />
  <input name="end_date" type="date" required />
  <input name="instructor_id" type="number" placeholder="ID do Formador" required />
  <button type="submit" class="blue-button">Criar</button>
</form>
<% if (error) { %>
  <p style="color:red; text-align:center;"><%= error %></p>
<% } %>
<%- include('../partials/footer') %>
